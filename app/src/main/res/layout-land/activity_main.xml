<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".MainActivity">

    <Button
        android:id="@+id/add_to_db"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Add to DB"
        tools:layout_editor_absoluteY="94dp" />

    <Button
        android:id="@+id/search_movies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Search for Movie"
        tools:layout_editor_absoluteX="550dp"
        tools:layout_editor_absoluteY="142dp" />

    <Button
        android:id="@+id/search_actors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Search for Actor"
        tools:layout_editor_absoluteY="190dp" />

    <Button
        android:id="@+id/search_web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Movie from WebService"
        tools:layout_editor_absoluteX="501dp"
        tools:layout_editor_absoluteY="238dp" />

</LinearLayout>